---
export const prerender = true;
import MechanicPage from "../../../components/gamebob/mechanics/MechanicPage.astro";
import MechanicCanvas from "../../../components/gamebob/mechanics/MechanicCanvas.astro";
import MechanicInfo from "../../../components/gamebob/mechanics/MechanicInfo.astro";
import { Icon } from "astro-icon/components";

const GITHUB_BASE =
    "https://github.com/Game-Bob/website/tree/main/src/mechanics/vibrator-cracker";
const CODE_URL =
    "https://github.com/Game-Bob/website/blob/main/src/mechanics/vibrator-cracker/VibratorCrackerGame.ts";
---

<MechanicPage
    title="Vibrator Cracker"
    description="Siente el mecanismo. Usa la vibración de tu dispositivo para encontrar la combinación correcta y abrir la caja fuerte."
    githubUrl={GITHUB_BASE}
    codeurl={CODE_URL}

    image="/images/gamebob/mechanics/vibrator-cracker.webp"
>
    <Icon slot="icon" name="mdi:safe" style="color: var(--color-secondary)" />

    <MechanicCanvas
        id="game-canvas"
        instruction="Gira el dial"
        subInstruction="Siente los clicks y mantén para abrir"
        verticalOnMobile={true}

    />

    <MechanicInfo>
        <Fragment slot="how-it-works">
            <li>
                <span style="color: var(--color-secondary)">•</span>
                <span>Gira el dial arrastrando con el dedo o mouse.</span>
            </li>
            <li>
                <span style="color: var(--color-secondary)">•</span>
                <span>Tu dispositivo vibrará ligeramente al pasar números.</span>
            </li>
            <li>
                <span style="color: var(--color-secondary)">•</span>
                <span>Una vibración distinta indica el número correcto.</span>
            </li>
            <li>
                <span style="color: var(--color-secondary)">•</span>
                <span>Mantén el dial en la posición correcta unos segundos para confirmar.</span>
            </li>
            <li>
                <span style="color: var(--color-secondary)">•</span>
                <span>Encuentra 3 números para abrir la caja.</span>
            </li>
        </Fragment>

        <Fragment slot="controls">
            <div class="control-item">
                <span class="control-key">Arrastrar / Touch</span>
                <span class="control-desc">Girar Dial</span>
            </div>
        </Fragment>
    </MechanicInfo>

    <div style="margin-top: var(--space-sm); padding: var(--space-sm); background: var(--black-20); border: 1px solid var(--black-50); border-radius: var(--radius-md); max-width: 28rem; margin-inline: auto; text-align: center;">
        <p style="color: var(--color-accent); font-size: 0.875rem;">
            <Icon name="mdi:alert" style="display: inline-block; width: 1rem; height: 1rem; margin-right: 0.25rem; margin-bottom: 0.25rem;" />
            Soporte experimental de vibración en iOS activado.
        </p>
        <div style="margin-top: var(--space-xs); display: flex; flex-direction: column; gap: var(--space-xs); align-items: center;">
            <button
                id="test-vibrate-btn"
                style="padding: 0.25rem 0.75rem; background: var(--bg-surface); color: var(--text-main); font-size: 0.75rem; border-radius: var(--radius-sm); border: none; cursor: pointer; transition: background 0.1s;"
                onmouseover="this.style.background='var(--text-muted)'"
                onmouseout="this.style.background='var(--bg-surface)'"
            >
                Test Vibration
            </button>
            <p id="debug-log" style="font-size: 0.75rem; color: var(--text-muted); font-family: var(--font-family-mono);"></p>
        </div>
    </div>
</MechanicPage>

<script>
    import { VibratorCrackerGame } from "../../../mechanics/vibrator-cracker/VibratorCrackerGame";

    const canvas = document.getElementById("game-canvas") as HTMLCanvasElement;
    const overlay = document.getElementById("game-canvas-overlay");
    const testBtn = document.getElementById("test-vibrate-btn");
    const debugLog = document.getElementById("debug-log");
    let game: game | null = null;

    function log(msg: string) {
        if (debugLog) debugLog.textContent = msg;
        console.log(msg);
    }

    if (testBtn) {
        testBtn.addEventListener("click", () => {
            if (navigator.vibrate) {
                const success = navigator.vibrate([200]);
                log(`Vibrate called: ${success ? "Success" : "Failed"}`);
            } else {
                log("navigator.vibrate not supported");
            }
        });
    }

    if (canvas && overlay) {
        const rect = canvas.getBoundingClientRect();
        canvas.width = rect.width;
        canvas.height = rect.height;

        overlay.addEventListener("click", () => {
            overlay.style.opacity = "0";
            overlay.style.pointerEvents = "none";
            if (!game) {
                game = new VibratorCrackerGame(canvas);
            }
        });

        window.addEventListener("resize", () => {
            if (game) game.resize();
        });
    }

</script>

<style>
    #game-canvas {
        touch-action: pan-y !important;
    }
</style>
