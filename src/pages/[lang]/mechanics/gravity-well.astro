---
import MechanicPage from "../../../components/gamebob/mechanics/MechanicPage.astro";
import MechanicCanvas from "../../../components/gamebob/mechanics/MechanicCanvas.astro";
import MechanicInfo from "../../../components/gamebob/mechanics/MechanicInfo.astro";
import { Icon } from "astro-icon/components";
import { ui } from "../../../i18n/ui";
import { useTranslations } from "../../../i18n/utils";
import { getGitHubUrls } from "../../../config/github";

export async function getStaticPaths() {
    return Object.keys(ui).map((lang) => ({
        params: { lang }
    }));
}

const { lang } = Astro.params;
const t = useTranslations(lang as any);

const { repo: GITHUB_BASE, code: CODE_URL } = getGitHubUrls("gravity-well");
---

<MechanicPage
    title={t("mechanics.gravity-well.title")}
    description={t("mechanics.gravity-well.description")}
    githubUrl={GITHUB_BASE}
    codeUrl={CODE_URL}
    image="/images/gamebob/mechanics/gravity-well.webp"
    lang={lang}
>
    <Icon slot="icon" name="mdi:magnet" class="text-purple-400" />

    <MechanicCanvas
        id="game-canvas"
        instruction={t("mechanics.interactiveDemo")}
        subInstruction={t("mechanics.demoPlaceholder")}
    />

    <MechanicInfo>
        <Fragment slot="how-it-works">
            <li class="flex items-start gap-2">
                <span class="text-blue-400 mt-1">•</span>
                <span>{t("mechanics.gravity-well.howItWorks.gravity")}</span>
            </li>
            <li class="flex items-start gap-2">
                <span class="text-blue-400 mt-1">•</span>
                <span>{t("mechanics.gravity-well.howItWorks.nbody")}</span>
            </li>
            <li class="flex items-start gap-2">
                <span class="text-blue-400 mt-1">•</span>
                <span>{t("mechanics.gravity-well.howItWorks.interaction")}</span>
            </li>
        </Fragment>

        <Fragment slot="controls">
            <div class="mechanic-control-item full-width">
                <span class="mechanic-control-label">{t("mechanics.gravity-well.controls.clickTap")}</span>
                <span class="mechanic-control-sublabel">{t("mechanics.gravity-well.controls.create")}</span>
            </div>
        </Fragment>
    </MechanicInfo>
</MechanicPage>

<script>
    import { GravityWellGame } from "../../../mechanics/gravity-well/GravityWellGame";

    const canvas = document.getElementById("game-canvas") as HTMLCanvasElement;
    const overlay = document.getElementById("game-canvas-overlay");
    let game: GravityWellGame | null = null;

    if (canvas && overlay) {
        const rect = canvas.getBoundingClientRect();
        canvas.width = rect.width;
        canvas.height = rect.height;

        overlay.addEventListener("click", () => {
            overlay.style.opacity = "0";
            overlay.style.pointerEvents = "none";
            if (!game) {
                game = new GravityWellGame(canvas);
            }
        });

        window.addEventListener("resize", () => {
            if (game) game.resize();
        });
    }
</script>
