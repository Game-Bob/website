---
import GameBobLayout from "../../../layouts/GameBobLayout.astro";
import RoadmapHeader from "../../../components/gamebob/roadmap/RoadmapHeader.astro";
import ProjectCard from "../../../components/gamebob/roadmap/ProjectCard.astro";
import { apps } from "../../../data/gamebob/apps";
import { useTranslations } from "../../../i18n/utils";

interface Props {
  lang: string;
}

const { lang } = Astro.props;
const t = useTranslations(lang as any);
---

<GameBobLayout
    title="Roadmap - GameBob"
    description="Development roadmap and project status."
    image="/images/gamebob/roadmap/index.webp"
>
    <div class="roadmap-page">
        <RoadmapHeader />

        <div class="roadmap-grid">
            {
                apps.map((project) => (
                    <ProjectCard project={project} />
                ))
            }
        </div>
    </div>
</GameBobLayout>

<style>
    .roadmap-page {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: var(--space-2xl) var(--space-sm);
    }

    .roadmap-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: var(--space-xl);
        width: 100%;
        max-width: 64rem;
        margin-top: var(--space-xl);
    }
</style>
