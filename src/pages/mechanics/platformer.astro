---
export const prerender = true;
import MechanicPage from "../../components/gamebob/mechanics/MechanicPage.astro";
import MechanicCanvas from "../../components/gamebob/mechanics/MechanicCanvas.astro";
import MechanicInfo from "../../components/gamebob/mechanics/MechanicInfo.astro";
import { Icon } from "astro-icon/components";

const GITHUB_BASE = "https://github.com/Game-Bob/website/tree/main/src/mechanics/platformer";
const CODE_URL =
    "https://github.com/Game-Bob/website/blob/main/src/mechanics/platformer/PlatformerGame.js";
---

<MechanicPage
    title="Plataformas"
    description="Demo de mecánicas fluidas: salto, doble salto, deslizamiento y partículas."
    githubUrl={GITHUB_BASE}
    codeurl={CODE_URL}

    image="/images/gamebob/mechanics/platformer.webp"
>
    <Icon slot="icon" name="mdi:controller-classic" style="color: var(--color-primary)" />

    <MechanicCanvas
        id="game-canvas"
        instruction="Usa las Flechas"
        subInstruction="Muévete y Salta"
        verticalOnMobile={false}

    />

    <MechanicInfo>
        <Fragment slot="how-it-works">
            <li>
                <span>•</span>
                <span>Máquina de estados finitos para el jugador.</span>
            </li>
            <li>
                <span>•</span>
                <span>Física de movimiento con inercia y fricción.</span>
            </li>
            <li>
                <span>•</span>
                <span>Sistema de partículas para feedback visual.</span>
            </li>
        </Fragment>

        <Fragment slot="controls">
            <div class="control-item" style="grid-column: span 1;">
                <span class="control-key">← / →</span>
                <span class="control-desc">Moverse</span>
            </div>
            <div class="control-item" style="grid-column: span 1;">
                <span class="control-key">Espacio</span>
                <span class="control-desc">Saltar</span>
            </div>
            <div class="control-item">
                <span class="control-key">Shift + ↓</span>
                <span class="control-desc">Deslizar / Caer</span>
            </div>
        </Fragment>
    </MechanicInfo>

    <div
        class="mechanic-debug-overlay"
        style="position: absolute; top: 1rem; right: 1rem; background: var(--black-50); backdrop-filter: blur(8px); padding: 0.5rem; border-radius: var(--radius-sm); font-size: 0.75rem; color: var(--text-main); pointer-events: none; z-index: 20; display: none;"
    >
        <div>State: <span id="debug-state" style="color: var(--color-accent);">Idle</span></div>
        <div>VX: <span id="debug-vel-x" style="color: var(--color-primary);">0.00</span></div>
        <div>VY: <span id="debug-vel-y" style="color: var(--color-secondary);">0.00</span></div>
    </div>
</MechanicPage>

<style>
    @media (width >= 768px) {
        .mechanic-debug-overlay {
            display: block !important;
        }
    }

</style>

<script>
    import { PlatformerGame } from "../../../mechanics/platformer/PlatformerGame.js";

    const canvas = document.getElementById("game-canvas") as HTMLCanvasElement;
    const overlay = document.getElementById("game-canvas-overlay");
    let game: game | null = null;

    if (canvas && overlay) {
        const rect = canvas.getBoundingClientRect();
        canvas.width = rect.width;
        canvas.height = rect.height;

        overlay.addEventListener("click", () => {
            overlay.style.opacity = "0";
            overlay.style.pointerEvents = "none";
            if (!game) {
                game = new PlatformerGame(canvas);
            }
        });

        window.addEventListener("resize", () => {
            if (game) game.resize();
        });
    }
</script>
