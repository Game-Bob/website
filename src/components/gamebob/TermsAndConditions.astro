---
import './TermsAndConditions.css';
import LanguageSelector from "./LanguageSelector.astro";
import DiscordCTA from "./DiscordCTA.astro";
import { useTranslations } from "../../i18n/utils";

interface Props {
    lang: string;
}

const { lang } = Astro.props;
const t = useTranslations(lang as any);
---

<section class="terms-section" id="terms-container">
    <div class="terms-container">
        <LanguageSelector baseUrl="/gamebob/terminos-y-condiciones/" />

        <div class="cta-wrapper">
            <DiscordCTA />
        </div>

        <div class="terms-header">
            <div class="terms-badge">
                {t("termsAndConditions.badge")}
            </div>
            <h1 class="terms-title">
                <span>{t("termsAndConditions.title_p1")}</span>
                <br />
                <span class="terms-title-gradient">
                    {t("termsAndConditions.title_p2")}
                </span>
            </h1>
            <p class="terms-description">
                {t("termsAndConditions.description")}
            </p>
            <div class="terms-update">
                <span class="update-line"></span>
                <span>{t("termsAndConditions.last_update")}</span>
                <span class="update-line"></span>
            </div>
        </div>

        <div class="terms-content-wrapper">
            <div class="intro-box">
                <p class="intro-text">
                    <span>{t("termsAndConditions.intro_p1")}</span>
                    <br /><br />
                    <span>{t("termsAndConditions.intro_p2")}</span>
                </p>
            </div>

            <div class="terms-grid">
                <div class="term-card">
                    <div class="card-title-group">
                        <span class="step-number">1</span>
                        <h3 class="card-title-text">{t("termsAndConditions.sections.license.title")}</h3>
                    </div>
                    <p class="card-text">
                        {t("termsAndConditions.sections.license.content")}
                    </p>
                </div>

                <div class="term-card">
                    <div class="card-title-group">
                        <span class="step-number">2</span>
                        <h3 class="card-title-text">{t("termsAndConditions.sections.acceptable.title")}</h3>
                    </div>
                    <p class="card-text">
                        {t("termsAndConditions.sections.acceptable.content")}
                    </p>
                    <ul class="card-list">
                        {(t("termsAndConditions.sections.acceptable.items") as unknown as string[]).map((item) => (
                            <li>{item}</li>
                        ))}
                    </ul>
                </div>

                <div class="term-card">
                    <div class="card-title-group">
                        <span class="step-number">3</span>
                        <h3 class="card-title-text">{t("termsAndConditions.sections.intellectual.title")}</h3>
                    </div>
                    <p class="card-text">
                        {t("termsAndConditions.sections.intellectual.content")}
                    </p>
                </div>

                <div class="term-card special">
                    <div class="card-title-group">
                        <span class="step-number">4</span>
                        <h3 class="card-title-text">{t("termsAndConditions.sections.privacy.title")}</h3>
                    </div>
                    <p class="card-text">
                        {t("termsAndConditions.sections.privacy.content")}
                    </p>
                    <div class="card-link-wrapper">
                        <a href="/gamebob/privacidad/" class="card-link">
                            <span>{t("termsAndConditions.sections.privacy.link_text")}</span>
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                class="link-icon"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                ><path d="M5 12h14"></path><path d="m12 5 7 7-7 7"></path></svg
                            >
                        </a>
                    </div>
                </div>

                <div class="term-card">
                    <div class="card-title-group">
                        <span class="step-number">5</span>
                        <h3 class="card-title-text">{t("termsAndConditions.sections.third_party.title")}</h3>
                    </div>
                    <p class="card-text">
                        {t("termsAndConditions.sections.third_party.content")}
                    </p>
                </div>

                <div class="term-card">
                    <div class="card-title-group">
                        <span class="step-number">6</span>
                        <h3 class="card-title-text">{t("termsAndConditions.sections.liability.title")}</h3>
                    </div>
                    <p class="card-text">
                        {t("termsAndConditions.sections.liability.content")}
                    </p>
                </div>

                <div class="term-card">
                    <div class="card-title-group">
                        <span class="step-number">7</span>
                        <h3 class="card-title-text">{t("termsAndConditions.sections.modifications.title")}</h3>
                    </div>
                    <p class="card-text">
                        {t("termsAndConditions.sections.modifications.content")}
                    </p>
                </div>

                <div class="term-card">
                    <div class="card-title-group">
                        <span class="step-number">8</span>
                        <h3 class="card-title-text">{t("termsAndConditions.sections.jurisdiction.title")}</h3>
                    </div>
                    <p class="card-text">
                        {t("termsAndConditions.sections.jurisdiction.content")}
                    </p>
                </div>

                <div class="term-card">
                    <div class="card-title-group">
                        <span class="step-number">9</span>
                        <h3 class="card-title-text">{t("termsAndConditions.sections.contact.title")}</h3>
                    </div>
                    <p class="card-text">
                        {t("termsAndConditions.sections.contact.content")}
                    </p>
                    <div class="contact-info">
                        <p>
                            Email: <a
                                href={`mailto:${t("termsAndConditions.sections.contact.email")}`}
                                class="contact-link"
                                >{t("termsAndConditions.sections.contact.email")}</a
                            >
                        </p>
                        <p>
                            Web: <a
                                href={t("termsAndConditions.sections.contact.website")}
                                class="contact-link"
                                >{t("termsAndConditions.sections.contact.website")}</a
                            >
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <div class="terms-footer">
            <div class="footer-copy-box">
                <div class="footer-line"></div>
                <p class="footer-copy">
                    {t("termsAndConditions.footer_copy")}
                </p>
                <div class="footer-line"></div>
            </div>
        </div>
    </div>
</section>
