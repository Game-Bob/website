---
import GameBobLayout from "../../../layouts/GameBobLayout.astro";
import PostMortemHeader from "../../../components/gamebob/post-mortem/PostMortemHeader.astro";
import PostMortemCard from "../../../components/gamebob/post-mortem/PostMortemCard.astro";
import { postMortemEntries } from "../../../data/gamebob/post-mortem/entries";
import { useTranslations } from "../../../i18n/utils";

interface Props {
  lang: string;
}

const { lang } = Astro.props;
const t = useTranslations(lang as any);
---

<GameBobLayout
    title={t("postMortemTemplate.title")}
    description="Analysis of failures and lessons learned."
    image="/images/gamebob/postmortem/index.webp"
>
    <div class="postmortem-page">
        <PostMortemHeader />

        <div class="postmortem-grid">
            {
                postMortemEntries.map((entry) => (
                    <PostMortemCard entry={entry} />
                ))
            }
        </div>
    </div>
</GameBobLayout>

<style>
    .postmortem-page {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: var(--space-2xl) var(--space-sm);
    }

    .postmortem-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: var(--space-xl);
        width: 100%;
        max-width: 64rem;
        margin-top: var(--space-xl);
    }
</style>
