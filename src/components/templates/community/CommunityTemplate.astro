---
import GameBobLayout from "../../../layouts/GameBobLayout.astro";
import DiscordCTA from "../../../components/gamebob/DiscordCTA.astro";
import { useTranslations } from "../../../i18n/utils";

interface Props {
  lang: string;
}

const { lang } = Astro.props;
const t = useTranslations(lang as any);
---

<GameBobLayout
    title={t("communityTemplate.title")}
    description="Join our community."
    image="/images/gamebob/community/index.webp"
>
    <div class="community-page">
        <header class="community-header">
            <h1 class="community-title">{t("nav.community")}</h1>
        </header>

        <div class="community-content">
            <DiscordCTA 
                title={t("hero.discord.title")} 
                subtitle={t("hero.discord.subtitle")}
            />
        </div>
    </div>
</GameBobLayout>

<style>
    .community-page {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: var(--space-md) var(--space-sm);
    }

    .community-header {
        margin-top: var(--space-xl);
        margin-bottom: var(--space-xl);
        text-align: center;
    }

    .community-title {
        font-size: var(--radius-3xl);
        font-weight: var(--font-weight-bold);
        text-transform: uppercase;
        color: var(--text-main);
        letter-spacing: -0.02em;
    }

    .community-content {
        width: 100%;
        max-width: 48rem;
        display: flex;
        justify-content: center;
    }
</style>
