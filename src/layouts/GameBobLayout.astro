---
import "./GameBobLayout.css";
import SEO from "../components/SEO.astro";
import Header from "../components/organisms/Header/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/tokens.css";
import "../styles/global.css";

import "@fontsource/inter/300.css";
import "@fontsource/inter/400.css";
import "@fontsource/inter/600.css";
import "@fontsource/inter/900.css";

import { getLangFromUrl } from "../i18n/utils";

interface props {
    title: string;
    description?: string;
    image?: string;
}

const { title, description, image } = Astro.props;
const currentLang = getLangFromUrl(Astro.url);

---

<!doctype html>
<html lang={currentLang} class="dark" data-theme="dark">
    <head>
        <SEO title={title} description={description} image={image}

 />

        <style is:global>
            :root {
                --color-gamebob-primary: var(--color-primary);
                --color-gamebob-text: var(--text-main);
                --color-gamebob-bg: var(--bg-main);
                --color-bg: var(--color-gamebob-bg);
                --color-text: var(--color-gamebob-text);
                --color-accent: var(--color-gamebob-primary);
            }

            body {
                background-color: var(--bg-main);
                color: var(--text-main);
            }

            body:not(.menu-open) nav#main-nav {
                border-bottom-color: var(--cyan-bob-10) !important;
                background-color: transparent !important;
                backdrop-filter: blur(120px) !important;
            }

            nav#main-nav > div > div > a {
                color: var(--color-gamebob-text) !important;
            }

            nav#main-nav > div > div > a:hover {
                color: var(--color-gamebob-primary) !important;
            }

            nav#main-nav > div > div > a.nav-active {
                color: var(--color-gamebob-primary) !important;
            }

            #theme-toggle {
                display: none !important;
            }

            #mobile-menu-overlay {
                background-color: var(--black-95) !important;
            }

            .menu-link {
                color: var(--color-gamebob-text) !important;
            }

            .link-number {
                color: var(--color-gamebob-primary) !important;
            }

            body.menu-open .line-1,
            body.menu-open .line-2 {
                background-color: var(--text-main) !important;
            }
        </style>
    </head>
    <body class="gamebob-body">
        <div class="bg-effects">
            <div class="glow-1"></div>
            <div class="glow-2"></div>
            <div class="glow-3"></div>
            <div class="grid-overlay"></div>
        </div>

        <Header />

        <main class="gamebob-main">
            <slot />
        </main>

        <Footer />
    </body>
</html>
