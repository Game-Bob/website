---
import { useTranslations, useLanguagePath } from "../i18n/utils";
import { Icon } from "astro-icon/components";

interface Props {
    lang: string;
}

const { lang } = Astro.props;
const t = useTranslations(lang as any);
const l = useLanguagePath(lang as any);
const year = new Date().getFullYear();
---

<footer class="footer">
    <div class="footer-content">
        <div class="footer-sections">
            <div class="footer-section">
                <h4 class="footer-section-title">{t("nav.explore")}</h4>
                <a href={l("/mechanics/")} class="footer-link">{t("nav.mechanics")}</a>
                <a href={l("/prototypes/")} class="footer-link">{t("nav.prototypes")}</a>
                <a href={l("/post-mortem/")} class="footer-link">{t("nav.postmortem")}</a>
            </div>

            <div class="footer-section">
                <h4 class="footer-section-title">{t("nav.legal")}</h4>
                <a href={l("/privacy/")} class="footer-link">{t("home.footer.privacy")}</a>
                <a href={l("/terms/")} class="footer-link">{t("nav.terms")}</a>
            </div>

            <div class="footer-section">
                <h4 class="footer-section-title">{t("nav.connect")}</h4>
                <div class="social-links">
                    <a href="https://github.com/jjlmoya" target="_blank" rel="noopener noreferrer" class="social-link" aria-label="GitHub">
                        <Icon name="mdi:github" />
                    </a>
                    <a href="https://twitter.com/gamebobstudio" target="_blank" rel="noopener noreferrer" class="social-link" aria-label="Twitter">
                        <Icon name="mdi:twitter" />
                    </a>
                    <a href="mailto:juanjo1989@gmail.com" class="social-link" aria-label="Email">
                        <Icon name="mdi:email" />
                    </a>
                </div>
            </div>
        </div>

        <div class="footer-bottom">
            <p class="footer-copy">&copy; {year} GameBob Studio. {t("home.footer.rights")}</p>
        </div>
    </div>
</footer>

<style>
    .footer {
        padding: 3rem 1rem;
        background: linear-gradient(180deg, var(--bg-main), var(--bg-surface));
        color: var(--text-muted);
        border-top: 1px solid var(--cyan-bob-20);
        margin-top: auto;
        position: relative;
    }

    .footer::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 0.0625rem;
        background: linear-gradient(90deg, transparent, var(--cyan-bob-50), transparent);
    }

    .footer-content {
        max-width: 75rem;
        margin: 0 auto;
    }

    .footer-sections {
        display: grid;
        grid-template-columns: 1fr;
        gap: var(--space-2xl);
        margin-bottom: var(--space-2xl);
    }

    @media (width >= 768px) {
        .footer-sections {
            grid-template-columns: repeat(3, 1fr);
        }
    }

    .footer-section {
        display: flex;
        flex-direction: column;
        gap: var(--space-xs);
    }

    .footer-section-title {
        font-size: 0.875rem;
        font-weight: 700;
        color: var(--text-main);
        text-transform: uppercase;
        letter-spacing: 0.1em;
        margin: 0 0 0.75rem;
    }

    .footer-link {
        color: var(--text-muted);
        text-decoration: none;
        font-size: 0.875rem;
        transition: color 0.2s;
    }

    .footer-link:hover {
        color: var(--cyan-bob);
    }

    .social-links {
        display: flex;
        gap: var(--space-sm);
    }

    .social-link {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 2.5rem;
        height: 2.5rem;
        border-radius: var(--radius-base);
        background: var(--bg-main);
        border: 1px solid var(--cyan-bob-20);
        color: var(--text-muted);
        transition: all 0.2s;
        text-decoration: none;
    }

    .social-link:hover {
        background: var(--cyan-bob-10);
        border-color: var(--cyan-bob-50);
        color: var(--cyan-bob);
        transform: translateY(-2px);
    }

    .social-link svg {
        width: 1.25rem;
        height: 1.25rem;
    }

    .footer-bottom {
        padding-top: var(--space-md);
        border-top: 1px solid var(--white-10);
        text-align: center;
    }

    .footer-copy {
        font-size: 0.75rem;
        color: var(--text-muted);
        margin: 0;
    }
</style>
