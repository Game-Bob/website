---
export const prerender = true;
import MechanicPage from "../../../components/gamebob/mechanics/MechanicPage.astro";
import MechanicCanvas from "../../../components/gamebob/mechanics/MechanicCanvas.astro";
import MechanicInfo from "../../../components/gamebob/mechanics/MechanicInfo.astro";
import { Icon } from "astro-icon/components";

const GITHUB_BASE = "https://github.com/Game-Bob/website/tree/main/src/mechanics/flocking";
const CODE_URL =
    "https://github.com/Game-Bob/website/blob/main/src/mechanics/flocking/FlockingMechanic.ts";
---

<mechanicpage
    title="Flocking"
    description="Comportamiento emergente. Observa cómo reglas simples crean bandadas complejas y vivas."
    githuburl={GITHUB_BASE}
    codeurl={CODE_URL}

    image="/images/gamebob/mechanics/flocking.webp"
>
    <Icon slot="icon" name="mdi:bird" style="color: #22d3ee" />

    <MechanicCanvas
        id="game-canvas"
        instruction="Mueve el cursor"
        subInstruction="Las partículas evitarán tu presencia"
        verticalOnMobile={true}

    />

    <MechanicInfo>
        <Fragment slot="how-it-works">
            <li>
                <span style="color: #60a5fa">•</span>
                <span>Separación: evitar aglomeraciones locales.</span>
            </li>
            <li>
                <span style="color: #60a5fa">•</span>
                <span>Alineación: dirigirse hacia el promedio de los vecinos.</span>
            </li>
            <li>
                <span style="color: #60a5fa">•</span>
                <span>Cohesión: moverse hacia el centro de masa local.</span>
            </li>
        </Fragment>

        <Fragment slot="controls">
            <div class="control-item">
                <span class="control-key">Mouse / Touch</span>
                <span class="control-desc">Interactuar (Repulsión)</span>
            </div>
        </Fragment>
    </MechanicInfo>
</MechanicPage>

<script>
    import { FlockingGame } from "../../../mechanics/flocking/FlockingGame";

    const canvas = document.getElementById("game-canvas") as HTMLCanvasElement;
    const overlay = document.getElementById("game-canvas-overlay");
    let game: game | null = null;game

    if (canvas && overlay) {
        const rect = canvas.getBoundingClientRect();
        canvas.width = rect.width;
        canvas.height = rect.height;

        overlay.addEventListener("click", () => {
            overlay.style.opacity = "0";
            overlay.style.pointerEvents = "none";
            if (!game) {
                game = new FlockingGame(canvas);
            }
        });

        window.addEventListener("resize", () => {
            if (game) game.resize();
        });
    }
</script>
