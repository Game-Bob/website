---
import BasePage from "../../../components/templates/BasePage.astro";
import { ui } from "../../../i18n/ui";

export async function getStaticPaths() {
  return Object.keys(ui)
    .filter((lang) => lang !== "en")
    .map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params;

---

<BasePage lang={lang as any}

 navKey="terms">
  <p class="description">Standard terms and conditions for our services.</p>
</BasePage>

<style>
  .description {
    color: var(--text-muted);
    font-size: 1.25rem;
    margin-top: var(--space-md);
  }
</style>
