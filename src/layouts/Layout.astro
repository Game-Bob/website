---
import { languages, defaultLang, type SupportedLang } from "../i18n/ui";
import { getLangFromUrl, useTranslations } from "../i18n/utils";
import Header from "../components/organisms/Header/Header.astro";
import SEO from "../components/SEO.astro";
import "../styles/tokens.css";
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
  image?: string;
  lang?: SupportedLang;
}

const { pathname } = Astro.url;
const { lang } = Astro.props;
const currentLang = lang || getLangFromUrl(Astro.url);
const t = useTranslations(currentLang);

const siteUrl = "https://www.gamebob.dev";

const getLocalizedPath = (l: string) => {
  const pathWithoutLang = pathname.replace(new RegExp(`^/${currentLang}(/|$)`), "/");
  const cleanPath = pathWithoutLang.startsWith("/") ? pathWithoutLang : `/${pathWithoutLang}`;
  
  if (l === defaultLang) return cleanPath;
  return `/${l}${cleanPath}`.replace(/\/$/, ""); 
};

const canonicalURL = new URL(pathname, siteUrl);

const {
  title = t("site.title"),
  description = t("site.description"),
  image = "/og-image.webp"
} = Astro.props;

---

<!doctype html>
<html lang={currentLang}

 data-theme="dark">
  <head>
    <SEO title={title} description={description} image={image} canonicalURL={canonicalURL.href} />

    {Object.keys(languages).map((l) => (
      <link
        rel="alternate"
        hreflang={l}
        href={new URL(getLocalizedPath(l), siteUrl)}
      />
    ))}

    <link
      rel="alternate"
      hreflang="x-default"
      href={new URL(getLocalizedPath(defaultLang), siteUrl)}

    />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;800&display=swap" rel="stylesheet">
  </head>
  <body class="theme-aware">
    <Header />
    <slot />
  </body>
</html>
